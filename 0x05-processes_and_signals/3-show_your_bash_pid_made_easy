#!/usr/bin/env bash
# Displays the PID and process name of all running bash processes
ps -e | grep bash | grep -v grep | while read -r line; do
    pid=$(echo "$line" | awk '{print $1}')
    cmd=$(echo "$line" | awk '{print $4}')
    # Handle cases where command path might be truncated
    if [[ "$cmd" != *"bash" ]]; then
        cmd=$(echo "$line" | awk '{print $NF}')
    fi
    echo "$pid $cmd"
done

